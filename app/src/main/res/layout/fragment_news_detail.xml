<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="10dp">

        <!-- News Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="298dp"
                android:layout_height="match_parent"
                android:text="Sample News Title"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/closeview"
                android:layout_width="58dp"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                tools:src="@drawable/close_24" />
        </LinearLayout>

        <!-- News Image -->
        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/worldcup_background"
            tools:src="@drawable/worldcup" />

        <!-- News Description -->
        <TextView
            android:id="@+id/newsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Sample news description..." />

        <!-- News Date -->
        <TextView
            android:id="@+id/newsDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#888"
            android:text="Published on: 01 Jan 2023" />

        <!-- News Source -->
        <TextView
            android:id="@+id/newsCetogary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#888"
            android:text="Source: Sample News Source" />

    </LinearLayout>

</ScrollView>
